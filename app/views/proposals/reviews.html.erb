<%= @seller.email %>


<h1>HELLOs</h1>

<%= form_for @review, url: create_review_path, method: :put, html: {id: @review.id} do |f| %>

  <div class="form-group container">
    <div>
      <%= f.text_field :review, autofocus: true, placeholder: "Review" %>
    </div>
    <%= f.hidden_field :buyer_id, :value => current_user.id %>
    <%= f.hidden_field :seller_id, :value => @seller.id %>
  </div>
  <%= f.submit "Post Request" %>
<% end %>